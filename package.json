{
  "name": "spolek-rodicu",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "npm run copy:template && tsc -b && vite build",
    "copy:template": "node scripts/copy-template.mjs",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "pdf:fields": "node scripts/list-pdf-fields.mjs",
    "prepare": "husky || true",
    "test:e2e": "playwright test",
    "test:e2e:ci": "firebase emulators:exec --project prispevkyrodicu \"node scripts/seedEmulator.mjs && VITE_E2E=true VITE_USE_EMULATORS=true npm run build && VITE_E2E=true VITE_USE_EMULATORS=true npm run preview -- --host 127.0.0.1 --port 4173 --strictPort & PREVIEW_PID=$! && sleep 3 && npm run test:e2e; STATUS=$?; kill $PREVIEW_PID; exit $STATUS\""
  },
  "dependencies": {
    "firebase": "^11.1.0",
    "lucide-react": "^0.575.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.5",
    "vitest": "^2.1.8",
    "@playwright/test": "^1.58.2"
  }
}
